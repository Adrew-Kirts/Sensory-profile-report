{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <form method="post" class="max-w-md mx-auto mt-8 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <h1 class="text-2xl font-bold mb-3">S'enregistrer</h1>

        <div class="flex flex-col space-y-5">
            {{ form_row(registrationForm.firstName, {
                label: 'Pr√©nom',
                attr: {
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                }
            }) }}

            {{ form_row(registrationForm.lastName, {
                label: 'Nom de famille',
                attr: {
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                }
            }) }}

            {{ form_row(registrationForm.username, {
                label: "Nom d'utilisateur",
                attr: {
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                }
            }) }}

            {{ form_row(registrationForm.email, {
                label: "Email",
                attr: {
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                }
            }) }}

            {{ form_row(registrationForm.registrationCode, {
                label: 'Registration Code',
                attr: {
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                }
            }) }}

            {{ form_row(registrationForm.password.first, {
                label: 'Mot de passe',
                attr: {
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                }
            }) }}

            {{ form_row(registrationForm.password.second, {
                label: 'Confirmation de mot de passe',
                attr: {
                    class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
                }
            }) }}

            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit"
                    class="bg-accent hover:bg-primary text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Register
            </button>
        </div>
        {{ form_end(registrationForm) }}
    </form>
{% endblock %}
