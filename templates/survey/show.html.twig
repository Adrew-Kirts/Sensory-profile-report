{% extends 'base.html.twig' %}

{% block title %}Survey{% endblock %}

{% block body %}

    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Réponses questionnaire</h1>
        <div>
            <strong>Questionnaire ID:</strong> {{ survey.id }}<br>
            <strong>Patient:</strong> {{ survey.patient.firstName }} {{ survey.patient.lastName }}<br>
            <strong>Date de naissance:</strong> {{ survey.patient.birthdate | date('d-m-y') }} (<strong>{{ survey.patient.age }} ans</strong>)<br>

        </div>

        <h2 class="text-xl font-bold my-4">Réponses</h2>
        <table class="table table-compact w-full">
            <thead>
            <tr>
                <th>#</th>
                <th>Question</th>
                <th>Answer</th>
            </tr>
            </thead>
            <tbody>
            {% for answer in answers %}
                <tr>
                    <td>{{ answer.id }}</td>
                    <td>{{ answer.question.questionText }}</td>
                    <td>{{ answer.answer }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ survey.id  }} {{ survey.patient.firstName }} {{ survey.patient.lastName }}

    {{ dump(survey) }}

    {{ dump(answers) }}

{% endblock %}
